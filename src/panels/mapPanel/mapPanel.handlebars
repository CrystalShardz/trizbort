  <label>Default room shape</label>
  <div style="display: flex; flex-wrap: no-wrap">
    <id-popup class="js-room-shape-rectangle">
      <svg class="icon"><use xlink:href="dist/icons.svg#rectangle"></use></svg>
    </id-popup>
    <id-popup class="js-room-shape-ellipse">
      <svg class="icon"><use xlink:href="dist/icons.svg#ellipse"></use></svg>
    </id-popup>
    <id-popup class="js-room-shape-octagon">
      <svg class="icon"><use xlink:href="dist/icons.svg#octagon"></use></svg>
    </id-popup>
  </div>  

  <label>Default room border style</label>
  <div style="display: flex; flex-wrap: no-wrap">
    <id-popup class="js-room-linestyle-solid">
      <svg class="icon"><use xlink:href="dist/icons.svg#line-solid"></use></svg>
    </id-popup>
    <id-popup class="js-room-linestyle-dash">
      <svg class="icon"><use xlink:href="dist/icons.svg#line-dash"></use></svg>
    </id-popup>
    <id-popup class="js-room-linestyle-dashdot">
      <svg class="icon"><use xlink:href="dist/icons.svg#line-dashdot"></use></svg>
    </id-popup>
    <id-popup class="js-room-linestyle-dashdotdot">
      <svg class="icon"><use xlink:href="dist/icons.svg#line-dashdotdot"></use></svg>
    </id-popup>
    <id-popup class="js-room-linestyle-dot">
      <svg class="icon"><use xlink:href="dist/icons.svg#line-dot"></use></svg>
    </id-popup>
    <id-popup class="js-room-linestyle-none"></id-popup>
  </div>  

  <label>Default room colors</label>
  <div style="display: flex">
    <div style="display: flex; flex-direction: column; flex-wrap: wrap">
      <id-popup title="Room fill" class="room-colortype selected" data-type="fill">
        <svg class="icon"><use xlink:href="dist/icons.svg#room-fill"></use></svg>
      </id-popup>
      <id-popup title="Room border" class="room-colortype" data-type="border">
        <svg class="icon"><use xlink:href="dist/icons.svg#room-border"></use></svg>
      </id-popup>
      <id-popup title="Room name" class="room-colortype" data-type="name">
        <svg class="icon"><use xlink:href="dist/icons.svg#room-name"></use></svg>
      </id-popup>
      <id-popup title="Room subtitle" class="room-colortype" data-type="subtitle">
        <svg class="icon"><use xlink:href="dist/icons.svg#room-subtitle"></use></svg>
      </id-popup>
      <id-popup title="Darkness stripe" class="room-colortype" data-type="dark">
        <svg class="icon"><use xlink:href="dist/icons.svg#room-darkness"></use></svg>
      </id-popup>
      <id-popup title="Start room" class="room-colortype" data-type="start">
        <svg class="icon"><use xlink:href="dist/icons.svg#room-start"></use></svg>
      </id-popup>
      <id-popup title="End room" class="room-colortype" data-type="end">
        <svg class="icon"><use xlink:href="dist/icons.svg#room-end"></use></svg>
      </id-popup>                  
    </div>
    <id-colorpicker class="js-map-room-color"></id-colorpicker>
  </div>
</div>

