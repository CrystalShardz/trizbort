{{> closePanel}}

<h2>Map</h2>

<div class="tabs"> 
  <div class="tab selected" data-body="tab-map-info">Info</div>
  <div class="tab" data-body="tab-map-grid">Grid</div>
  <div class="tab" data-body="tab-map-rooms">Room</div>
  <div class="tab" data-body="tab-map-connectors">Line</div>
  <div class="tab" data-body="tab-map-notes">Note</div>
  <div class="tab" data-body="tab-map-blocks">Block</div>
</div>

<div class="tab-body" id="tab-map-info">
  <id-input class="js-map-title" data-label="Map title"></id-input>
  <id-input class="js-map-author" data-label="Map author"></id-input>
  <id-textarea class="js-map-description" data-label="Description"></id-textarea>
</div>

<div class="tab-body" id="tab-map-grid">
  <id-check class="js-map-grid-visible" data-label="Visible"></id-check>
  <id-check class="js-map-grid-origin" data-label="Show origin"></id-check>
  <id-check class="js-map-grid-snap" data-label="Snap to grid"></id-check>
  <id-range class="js-map-grid-size" data-min="16" data-max="128"></id-range>

  <label>Map background</label>
  <div style="display:flex">
    <id-popup class="js-map-bg-none"></id-popup>  
    {{#each assets}}
    <id-popup class="js-map-bg-{{this}}">
      <div style="width:24px; height: 24px; background-size: 24px 24px; background-image: url('assets/{{this}}.jpg');"></div>
    </id-popup>  
    {{/each}}
  </div>
</div>

<div class="tab-body" id="tab-map-rooms">
  <label>Default room width</label>
  <id-range class='js-map-room-width' data-min="64" data-max="256"></id-range>
  <label>Default room height</label>
  <id-range class='js-map-room-height' data-min="64" data-max="256"></id-range>
  <label>Default room line width</label>
  <id-range class='js-map-room-linewidth' data-min="1" data-max="10"></id-range>
  <label>Default room rounding</label>
  <id-range class='js-map-room-rounding' data-min="0" data-max="30"></id-range>
  <label>Darkness stripe size</label>
