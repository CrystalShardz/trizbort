#charset "us-ascii"

#include <adv3.h>
#include <en_us.h>

versionInfo: GameID
  name = '{{map.name}}'
  byline = 'by {{map.author}}'
  version = '1.0'
  desc = '"{{map.description}}'

gameMain: GameMainDef
  initialPlayerChar = me

+ me: Actor
  location = {{className map.startRoom.name}} 
;

{{#each map.rooms}} 
{{className this.name}}: Room '{{this.name}}'
  "{{this.description}}"
  {{#each this.connections}}
  {{ dirToStr this.dir }}: {{className this.room.name}}
  {{/each}}
;
{{/each}} 


