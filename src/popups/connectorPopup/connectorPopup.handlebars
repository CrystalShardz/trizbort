<id-popup class="js-color">
  <svg class="icon"><use xlink:href="dist/icons.svg#paintbrush"></use></svg>
  <div class="popup-overlay" style="width:168px">
    <div style="display: flex; flex-wrap: wrap">
      {{#each colors}}
        <id-popup class="alpha"></id-popup>
      {{/each}}
    </div>
  </div>     
</id-popup>
<id-popup class="js-line">
  <svg class="icon"><use xlink:href="dist/icons.svg#line-solid"></use></svg>
  <div class="popup-overlay">
    <div style="display: flex; flex-wrap: no-wrap">
      <id-popup class="js-linestyle-solid">
        <svg class="icon"><use xlink:href="dist/icons.svg#line-solid"></use></svg>
      </id-popup>
      <id-popup class="js-linestyle-dash">
        <svg class="icon"><use xlink:href="dist/icons.svg#line-dash"></use></svg>
      </id-popup>
      <id-popup class="js-linestyle-dashdot">
        <svg class="icon"><use xlink:href="dist/icons.svg#line-dashdot"></use></svg>
      </id-popup>
      <id-popup class="js-linestyle-dashdotdot">
        <svg class="icon"><use xlink:href="dist/icons.svg#line-dashdotdot"></use></svg>
      </id-popup>
      <id-popup class="js-linestyle-dot">
        <svg class="icon"><use xlink:href="dist/icons.svg#line-dot"></use></svg>
      </id-popup>
    </div>
    <id-range class="js-linewidth" data-min="1" data-max="10"></id-range>
  </div>      
</id-popup>
<id-popup class="js-basic">
  <svg class="icon"><use xlink:href="dist/icons.svg#font"></use></svg>
  <div class="popup-overlay" style="width:168px">
    <id-input class="js-name" data-label="Name"></id-input>
  </div>
</id-popup>
<id-popup class="js-delete">
  <svg class="icon"><use xlink:href="dist/icons.svg#trash"></use></svg>
</id-popup>
<id-popup class="js-more">
  <svg class="icon"><use xlink:href="dist/icons.svg#ellipsis-h"></use></svg>
</id-popup>